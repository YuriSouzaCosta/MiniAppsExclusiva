<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous" />
    <link rel="stylesheet" href="/css/calculadoraCusto.css" />
    <script src="https://kit.fontawesome.com/acad52e772.js" crossorigin="anonymous"></script>
    <title>Calculadora Custo</title>
    <style>
        /* Additional responsive adjustments */
        .main-content-wrapper {
            margin-left: 80px; /* Default for collapsed sidebar */
            transition: margin-left 0.2s;
            padding: 20px;
        }
        @media (min-width: 768px) {
            /* Adjust based on sidebar behavior if needed, but the CSS handles it */
        }
        .calc-card {
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            transition: transform 0.2s;
        }
        .calc-card:hover {
            transform: translateY(-5px);
        }
    </style>
</head>
<body>
    <div>
        <%- include('layout') %>

        <div class="container-fluid">
            <div class="row justify-content-center g-4 mt-3">
                <!-- Calculadora Custo -->
                <div class="col-md-6 col-lg-5">
                    <div class="bg-exc-custo-2 p-4 rounded-3 calc-card h-100">
                        <p class="bg-text-white text-capitalize text-center fs-2 mb-4">
                            <i class="fas fa-calculator me-2"></i>Calculadora Custo
                        </p>
                        
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="basic-addon1">Valor</span>
                            <input type="text" class="form-control" placeholder="R$ 0.00" id="vlr" oninput="calcularCusto()" />
                        </div>

                        <div class="input-group mb-3">
                            <label class="input-group-text" for="ipi">IPI</label>
                            <select class="form-select" id="ipi" onchange="calcularCusto()">
                                <option value="0,00">0,00</option>
                                <option value="2,60">2,60</option>
                                <option value="3,00">3,00</option>
                                <option value="3,25">3,25</option>
                                <option value="3,75">3,75</option>
                                <option value="4,00">4,00</option>
                                <option value="5,00">5,00</option>
                                <option value="5,20">5,20</option>
                                <option value="6,00">6,00</option>
                                <option value="6,50">6,50</option>
                                <option value="7,50">7,50</option>
                                <option value="7,80">7,80</option>
                                <option value="8,00">8,00</option>
                                <option value="8,21">8,21</option>
                                <option value="8,63">8,63</option>
                                <option value="9,00">9,00</option>
                                <option value="9,75">9,75</option>
                                <option value="10,00">10,00</option>
                                <option value="11,25">11,25</option>
                                <option value="12,00">12,00</option>
                                <option value="13,00">13,00</option>
                                <option value="15,00">15,00</option>
                                <option value="17,00">17,00</option>
                                <option value="18,00">18,00</option>
                                <option value="20,00">20,00</option>
                                <option value="35,00">35,00</option>
                                <option value="40,00">40,00</option>
                            </select>
                        </div>

                        <div class="input-group mb-3">
                            <label class="input-group-text" for="frete">Frete</label>
                            <select class="form-select" id="frete" onchange="calcularCusto()">
                                <option value="0,00">0,00</option>
                                <option value="5,00">5,00</option>
                                <option value="7,00">7,00</option>
                                <option value="9,00">9,00</option>
                                <option value="10,00">10,00</option>
                                <option value="12,00">12,00</option>
                                <option value="15,00">15,00</option>
                                <option value="20,00">20,00</option>
                            </select>
                        </div>

                        <div class="input-group mb-3">
                            <label class="input-group-text" for="imposto">Imposto</label>
                            <select class="form-select" id="imposto" onchange="calcularCusto()">
                                <option value="0,00">0,00</option>
                                <option value="5,00">5,00</option>
                                <option value="8,00">8,00</option>
                            </select>
                        </div>

                        <div class="input-group mb-3">
                            <span class="input-group-text fw-bold">Custo Total</span>
                            <input type="text" class="form-control fw-bold" id="resultado" readonly />
                        </div>

                        <div class="row">
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <span class="input-group-text">Markup</span>
                                    <input type="text" class="form-control" placeholder="15%" id="mrkp" oninput="calcularCusto()" />
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <span class="input-group-text bg-warning text-dark fw-bold">Sugerido</span>
                                    <input type="text" class="form-control fw-bold" id="preco" readonly />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quero Vender -->
                <div class="col-md-6 col-lg-5">
                    <div class="bg-exc-custo p-4 rounded-3 calc-card h-100">
                        <p class="bg-text-white text-capitalize text-center fs-2 mb-4">
                            <i class="fas fa-tags me-2"></i>Quero Vender
                        </p>
                        
                        <div class="input-group mb-3">
                            <span class="input-group-text">Valor Venda</span>
                            <input type="text" class="form-control" placeholder="R$ 0.00" id="vlrDesejo" oninput="calcularDesejo()" />
                        </div>

                        <div class="row g-3">
                            <div class="col-6">
                                <div class="input-group">
                                    <span class="input-group-text">Margem</span>
                                    <input type="text" class="form-control" id="margem" readonly />
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="input-group">
                                    <span class="input-group-text">Imposto</span>
                                    <input type="text" class="form-control" id="imposto2" readonly />
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="input-group">
                                    <span class="input-group-text">Comissão</span>
                                    <input type="text" class="form-control" id="comissao" readonly />
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="input-group">
                                    <span class="input-group-text">Líquido</span>
                                    <input type="text" class="form-control" id="liquido" readonly />
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="input-group">
                                    <span class="input-group-text bg-success text-white fw-bold">% Líquido</span>
                                    <input type="text" class="form-control fw-bold text-success" id="liquido2" readonly />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function calcularCusto() {
            const valor = parseFloat(document.getElementById("vlr").value.replace(",", ".") || 0);
            const ipi = parseFloat(document.getElementById("ipi").value.replace(",", ".") || 0);
            const frete = parseFloat(document.getElementById("frete").value.replace(",", ".") || 0);
            const imposto = parseFloat(document.getElementById("imposto").value.replace(",", ".") || 0);
            const mrkp = parseFloat(document.getElementById("mrkp").value.replace(",", ".") || 0);

            if (!isNaN(valor)) {
                const resultado = valor + valor * (ipi / 100) + (valor + valor * (ipi / 100)) * (frete / 100) + valor * (imposto / 100);
                const preco = resultado * (mrkp / 100 + 1);
                
                document.getElementById("resultado").value = "R$ " + resultado.toFixed(2);
                document.getElementById("preco").value = "R$ " + preco.toFixed(2);
                
                // Recalculate desire if value exists
                if(document.getElementById("vlrDesejo").value) {
                    calcularDesejo();
                }
            }
        }

        function calcularDesejo() {
            const resultadoVal = document.getElementById("resultado").value.replace("R$ ", "").replace(",", ".");
            const valor = parseFloat(resultadoVal || 0);
            const desejo = parseFloat(document.getElementById("vlrDesejo").value.replace(",", ".") || 0);

            if (valor > 0 && desejo > 0) {
                const margem = ((desejo - valor) / valor) * 100;
                const imposto = desejo * 0.14; // 14% tax assumption from original
                const Comissao = desejo * 0.1; // 10% commission assumption from original
                const liq = desejo - (imposto + Comissao + valor);
                const liqPerc = (liq / desejo) * 100;

                document.getElementById("margem").value = margem.toFixed(2) + "%";
                document.getElementById("imposto2").value = "R$ " + imposto.toFixed(2);
                document.getElementById("comissao").value = "R$ " + Comissao.toFixed(2);
                document.getElementById("liquido").value = "R$ " + liq.toFixed(2);
                document.getElementById("liquido2").value = liqPerc.toFixed(2) + "%";
            }
        }
    </script>
</body>
</html>
