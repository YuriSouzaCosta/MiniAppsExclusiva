<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous" />
    <script src="https://kit.fontawesome.com/acad52e772.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/consultaProdutos.css?v=2.0" />
    <title>Consulta de Produtos <%= isVendedor ? '(Vendedor)' : '' %></title>
</head>
<body>
    <div>
        <%- include('layout') %>

        <div class="container mt-4">
            <div class="card p-4 shadow-sm mb-4">
                <h2 class="mb-3 text-center" style="color: #500001;">
                    <i class="fas fa-search me-2"></i>Consulta de Produtos <%= isVendedor ? '(Vendedor)' : '' %>
                </h2>
                <div class="input-group">
                    <input type="text" class="form-control" id="inputCodigoEan" placeholder="Busque por Nome, Referência ou Código de Barras..." />
                    
                    <select id="selectMarcas" class="form-select btn-exclusiva-marca" style="max-width: 200px;">
                        <option selected disabled hidden>Selecione a Marca</option>
                        <option value="Selecione a Marca">Todas as Marcas</option>
                    </select>
                    
                    <button class="btn btn-exclusiva" type="button" id="btnSearch">
                        <i class="fas fa-search me-1"></i> Pesquisar
                    </button>
                </div>
            </div>

            <div class="table-responsive">
                <table class="responsive-table">
                    <thead>
                        <tr>
                            <th scope="col">Produto</th>
                            <th scope="col">Marca</th>
                            <th scope="col">Referência</th>
                            <th scope="col">Cód. Barras</th>
                            <% if (!isVendedor) { %>
                                <th scope="col">Ult. Entrada</th>
                                <th scope="col">Vlr Custo</th>
                            <% } %>
                            <th scope="col">Vlr Venda</th>
                        </tr>
                    </thead>
                    <tbody id="produtosAvaria">
                        <!-- Results will be populated here -->
                    </tbody>
                </table>
            </div>

            <div class="card mt-3 mb-3 p-3 text-center fw-bold shadow-sm" id="totalEstoque_F" style="display: none; background-color: #e9ecef;">
                Estoque Total: 0
            </div>

            <div class="table-responsive" id="estoqueContainer" style="display: none;">
                <h4 class="mb-2" style="color: #500001;">Detalhes do Estoque</h4>
                <table class="responsive-table">
                    <thead>
                        <tr>
                            <th scope="col" class="text-center">Local e Quantidade</th>
                        </tr>
                    </thead>
                    <tbody id="estoqueProdutos">
                        <!-- Stock details will be populated here -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    
    <script>
        const isVendedor = <%= isVendedor %>;

        document.addEventListener('DOMContentLoaded', function() {
            loadMarcas();

            document.getElementById('btnSearch').addEventListener('click', searchProducts);
            document.getElementById('inputCodigoEan').addEventListener('keypress', function(e) {
                if (e.key === 'Enter') searchProducts();
            });
        });

        async function loadMarcas() {
            try {
                const response = await axios.get('/consulta-produtos/api/marcas');
                const select = document.getElementById('selectMarcas');
                response.data.forEach(marca => {
                    const option = document.createElement('option');
                    option.value = marca.DESCRICAO;
                    option.textContent = marca.DESCRICAO;
                    select.appendChild(option);
                });
            } catch (error) {
                console.error('Erro ao carregar marcas:', error);
            }
        }

        async function searchProducts() {
            const term = document.getElementById('inputCodigoEan').value;
            const marca = document.getElementById('selectMarcas').value;
            
            if (!term && (!marca || marca === 'Selecione a Marca')) {
                alert('Por favor, digite um termo de busca ou selecione uma marca.');
                return;
            }

            try {
                const response = await axios.get('/consulta-produtos/api/produtos', {
                    params: { term, marca }
                });
                displayProducts(response.data);
                document.getElementById('estoqueContainer').style.display = 'none';
                document.getElementById('totalEstoque_F').style.display = 'none';
            } catch (error) {
                console.error('Erro ao buscar produtos:', error);
                alert('Erro ao buscar produtos. Tente novamente.');
            }
        }

        function displayProducts(products) {
            const tbody = document.getElementById('produtosAvaria');
            tbody.innerHTML = '';

            if (products.length === 0) {
                tbody.innerHTML = '<tr><td colspan="7" class="text-center">Nenhum produto encontrado.</td></tr>';
                return;
            }

            // Renderizar tabela (desktop)
            products.forEach(product => {
                const tr = document.createElement('tr');
                
                let html = `
                    <th scope="row">${product.DESCRPROD}</th>
                    <td>${product.MARCA}</td>
                    <td>${product.REFFORN || '-'}</td>
                    <td>${product.REFERENCIA}</td>
                `;

                if (!isVendedor) {
                    html += `
                        <td>${product.ULT_COMPRA || '-'}</td>
                        <td>R$ ${parseFloat(product.CUSTO).toFixed(2)}</td>
                    `;
                }

                html += `<td>R$ ${parseFloat(product.PRECO).toFixed(2)}</td>`;
                
                tr.innerHTML = html;
                tr.style.cursor = 'pointer';
                tr.title = 'Clique para ver o estoque';
                tr.addEventListener('click', () => loadStock(product.CODPROD));
                
                tbody.appendChild(tr);
            });

            // Renderizar cards (mobile)
            renderMobileCards(products);
        }

        function renderMobileCards(products) {
            let cardsContainer = document.getElementById('productCardsContainer');
            if (!cardsContainer) {
                cardsContainer = document.createElement('div');
                cardsContainer.id = 'productCardsContainer';
                cardsContainer.className = 'product-cards-container';
                document.querySelector('.table-responsive').parentNode.insertBefore(
                    cardsContainer,
                    document.querySelector('.table-responsive').nextSibling
                );
            }

            cardsContainer.innerHTML = '';

            products.forEach(product => {
                const card = document.createElement('div');
                card.className = 'product-card';
                card.onclick = () => loadStock(product.CODPROD);

                let cardHTML = `
                    <div class="product-card-header">${product.DESCRPROD}</div>
                    <div class="product-card-row">
                        <span class="product-card-label">Marca:</span>
                        <span class="product-card-value">${product.MARCA}</span>
                    </div>
                    <div class="product-card-row">
                        <span class="product-card-label">Referência:</span>
                        <span class="product-card-value">${product.REFFORN || '-'}</span>
                    </div>
                    <div class="product-card-row">
                        <span class="product-card-label">Cód. Barras:</span>
                        <span class="product-card-value">
                            ${product.REFERENCIA}
                            <i class="fas fa-copy copy-icon" onclick="event.stopPropagation(); copyToClipboard('${product.REFERENCIA}')" title="Copiar código"></i>
                        </span>
                    </div>
                `;

                if (!isVendedor) {
                    cardHTML += `
                        <div class="product-card-row">
                            <span class="product-card-label">Últ. Entrada:</span>
                            <span class="product-card-value">${product.ULT_COMPRA || '-'}</span>
                        </div>
                        <div class="product-card-row">
                            <span class="product-card-label">Vlr Custo:</span>
                            <span class="product-card-value">R$ ${parseFloat(product.CUSTO).toFixed(2)}</span>
                        </div>
                    `;
                }

                cardHTML += `
                    <div class="product-card-row">
                        <span class="product-card-label">Vlr Venda:</span>
                        <span class="product-card-value product-card-price">R$ ${parseFloat(product.PRECO).toFixed(2)}</span>
                    </div>
                `;

                card.innerHTML = cardHTML;
                cardsContainer.appendChild(card);
            });
        }

        // Função para copiar para clipboard
        function copyToClipboard(text) {
            if (navigator.clipboard && navigator.clipboard.writeText) {
                navigator.clipboard.writeText(text).then(() => {
                    // Feedback visual
                    const Toast = Swal.mixin({
                        toast: true,
                        position: 'top-end',
                        showConfirmButton: false,
                        timer: 1500,
                        timerProgressBar: true
                    });
                    Toast.fire({
                        icon: 'success',
                        title: 'Código copiado!'
                    });
                }).catch(err => {
                    console.error('Erro ao copiar:', err);
                    alert('Código: ' + text);
                });
            } else {
                // Fallback para navegadores antigos
                const textArea = document.createElement('textarea');
                textArea.value = text;
                textArea.style.position = 'fixed';
                textArea.style.left = '-999999px';
                document.body.appendChild(textArea);
                textArea.select();
                try {
                    document.execCommand('copy');
                    alert('Código copiado: ' + text);
                } catch (err) {
                    alert('Código: ' + text);
                }
                document.body.removeChild(textArea);
            }
        }

        async function loadStock(codProd) {
            try {
                const response = await axios.get('/consulta-produtos/api/estoque', {
                    params: { codProd }
                });
                displayStock(response.data);
            } catch (error) {
                console.error('Erro ao buscar estoque:', error);
            }
        }

        function displayStock(stockData) {
            const tbody = document.getElementById('estoqueProdutos');
            tbody.innerHTML = '';
            let totalEstoque = 0;

            // Renderizar tabela (desktop)
            stockData.forEach(item => {
                if (parseFloat(item.ESTOQUE) > 0) {
                    const tr = document.createElement('tr');
                    tr.innerHTML = `
                        <td>
                            <emp>Empresa: ${item.CODEMP}</emp>&emsp;
                            <estoque>Estoque: ${item.ESTOQUE}</estoque>
                        </td>
                    `;
                    tbody.appendChild(tr);
                    totalEstoque += parseFloat(item.ESTOQUE);
                }
            });

            // Renderizar cards mobile
            let stockCardsContainer = document.getElementById('stockCardsContainer');
            if (!stockCardsContainer) {
                stockCardsContainer = document.createElement('div');
                stockCardsContainer.id = 'stockCardsContainer';
                stockCardsContainer.className = 'product-cards-container';
                document.getElementById('estoqueContainer').appendChild(stockCardsContainer);
            }

            stockCardsContainer.innerHTML = '';
            
            // Mostrar cada estoque individualmente
            stockData.forEach(item => {
                if (parseFloat(item.ESTOQUE) > 0) {
                    const card = document.createElement('div');
                    card.className = 'stock-card';
                    card.innerHTML = `
                        <span class="stock-card-empresa">Empresa: ${item.CODEMP}</span>
                        <span class="stock-card-qtd">Estoque: ${item.ESTOQUE}</span>
                    `;
                    stockCardsContainer.appendChild(card);
                }
            });

            const totalDiv = document.getElementById('totalEstoque_F');
            totalDiv.textContent = `Estoque Total: ${totalEstoque}`;
            totalDiv.style.display = 'block';
            
            document.getElementById('estoqueContainer').style.display = 'block';
            
            // REMOVIDO: Scroll automático
            // totalDiv.scrollIntoView({ behavior: 'smooth' });
        }
    </script>
</body>
</html>
